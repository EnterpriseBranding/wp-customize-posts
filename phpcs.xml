<?xml version="1.0"?>
<ruleset name="Customize Posts Plugin">

	<rule ref="WordPress-Core">
		<exclude name="Squiz.Commenting.LongConditionClosingComment" />
	</rule>
	<rule ref="WordPress.WP.I18n">
		<exclude-pattern>*/php/theme-support/*</exclude-pattern>
		<properties>
			<property name="text_domain" value="customize-posts,default" />
		</properties>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidHookName">
		<properties>
			<property name="additionalWordDelimiters" value="-." />
		</properties>
	</rule>
	<rule ref="WordPress-Docs" />

	<arg name="extensions" value="php"/>

	<!-- Show sniff codes in all reports -->
	<arg value="s"/>

	<!-- Allow invoking just `phpcs` on command line without assuming STDIN for file input. -->
	<file>.</file>

	<rule ref="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing">
		<severity>0</severity>
	</rule>

	<exclude-pattern>*/dev-lib/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
